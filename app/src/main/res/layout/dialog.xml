<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="20dp"
    android:paddingStart="20dp"
    android:layout_marginRight="10dp"
    android:layout_marginEnd="10dp"
    android:layout_marginLeft="10dp"
    android:layout_marginStart="10dp"
    tools:ignore="RtlSymmetry">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <EditText
        android:id="@+id/user_input"
        android:background="@drawable/custom_background_edit_text"
        android:backgroundTint="?attr/colorSecondary"
        android:layout_gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:maxLength="30"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="30dp"
        android:importantForAutofill="no"
        android:inputType="text"
        tools:ignore="LabelFor">

    </EditText>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">

        <TextView
            android:id="@+id/add_image_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:text="Aggiungi un'immagine"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="15sp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/add_image_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/add_image_title"
            android:layout_centerInParent="true"
            android:layout_marginTop="20dp"
            android:contentDescription="Add Image"
            android:src="@drawable/ic_add_category_image"
            android:visibility="visible"
            android:background="@null"/>

        <ImageView
            android:id="@+id/category_image"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_below="@+id/add_image_button"
            android:adjustViewBounds="true"
            android:maxHeight="300dp"
            android:visibility="gone"/>

        <LinearLayout
            android:id="@+id/image_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            android:layout_below="@+id/category_image">

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center">

                <ImageButton
                    android:id="@+id/modify_image"
                    android:layout_marginTop="20dp"
                    android:layout_height="match_parent"
                    android:layout_width="wrap_content"
                    android:layout_column="0"
                    android:src="@drawable/ic_modify"
                    android:layout_marginStart="80dp"
                    android:background="@null">
                </ImageButton>

                <ImageButton
                    android:id="@+id/remove_image"
                    android:layout_marginTop="20dp"
                    android:layout_height="match_parent"
                    android:layout_width="wrap_content"
                    android:layout_column="1"
                    android:src="@drawable/ic_delete"
                    android:background="@null"
                    android:layout_marginStart="80dp">
                </ImageButton>

            </GridLayout>

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>