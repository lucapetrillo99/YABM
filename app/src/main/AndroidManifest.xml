<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ilpet.yabm">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission
        android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        android:maxSdkVersion="28" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:requestLegacyExternalStorage="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.YABM"
        android:usesCleartextTraffic="true">
        <activity android:name="com.ilpet.yabm.activities.InfoAppActivity" />
        <activity android:name="com.ilpet.yabm.activities.BackupActivity" />
        <activity android:name="com.ilpet.yabm.activities.BookmarksManagerActivity" />
        <activity android:name="com.ilpet.yabm.activities.FeedbackActivity" />
        <activity android:name="com.ilpet.yabm.activities.SettingsActivity" />
        <activity android:name="com.ilpet.yabm.activities.CategoriesActivity" />
        <activity
            android:name="com.ilpet.yabm.activities.InsertBookmarkActivity"
            android:launchMode="singleTask">
            <intent-filter>
                <action android:name="android.intent.action.SEND" />
                <category android:name="android.intent.category.DEFAULT" />
                <data android:mimeType="text/plain" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.ilpet.yabm.activities.MainActivity"
            android:launchMode="singleInstance">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <receiver android:name="com.ilpet.yabm.utils.AlarmReceiver" />
    </application>

</manifest>